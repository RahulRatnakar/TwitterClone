<div class="column is-half">
    <% if user_signed_in? %>
    <article class="media box">
        <figure class="media-left"> 
            <p class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
            </p>
        </figure>
        <div class="media-content">
            <%= render "tweets/form"%>
        </div>
    </article>
    <%end%>
<% @tweets.each do |tweet|%>
    <div class="Box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%= tweet.user.name%></strong><br>
                    <small><%= tweet.user.username%></small>
                    <p><%= tweet.tweet%></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to tweet ,class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" area-hidden="true"></i></span>
                        <%end%>
                        <%= link_to edit_tweet_path(tweet) ,class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" area-hidden="true"></i></span>
                        <%end%>
                        <%= link_to tweet ,method: :delete , data: {confirm: "are you sure to delete the post"} do %>
                            <span class="icon"><i class="fa fa-trash-o" area-hidden="true"></i></span>
                        <%end%>
                    </div>
                </nav>
            </div>
        </article>
    </div>

<%end%>
</div>